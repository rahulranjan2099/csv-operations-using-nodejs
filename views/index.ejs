<div class="container mt-4">
    <h3>Books</h3>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col" style="width: 12%;">ISBN</th>
            <th scope="col">Author</th>
            <th scope="col"style="width: 50%;">Description</th>
          </tr>
        </thead>
        <tbody>
            <% books.forEach((data,i)=>{ %> 
                <tr>
                    <th scope="row"> <%= i+1 %></th>
                    <td> <%=data.title %>  </td>
                    <td><%=data.isbn %></td>
                    <td><%=data.authors %></td>
                    <td><%=data.description %></td>
                </tr>
                <% }) %>   
        </tbody>
      </table>
    </div>

    <div class="container mt-4">
        <h3>Magazines</h3>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">ISBN</th>
                <th scope="col">Author</th>
                <th scope="col">Published At</th>
              </tr>
            </thead>
            <tbody>
                <% magazines.forEach((data,i)=>{ %> 
                    <tr>
                        <th scope="row"> <%= i+1 %></th>
                        <td> <%=data.title %>  </td>
                        <td><%=data.isbn %></td>
                        <td><%=data.authors %></td>
                        <td><%=data.publishedAt %></td>
                    </tr>
                    <% }) %>   
            </tbody>
          </table>
        </div>

        <div class="container mt-4">
            <h3>Author</h3>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">FirstName</th>
                    <th scope="col">LastName</th>
                    <th scope="col">Email</th>
                  </tr>
                </thead>
                <tbody>
                    <% authors.forEach((data,i)=>{ %> 
                        <tr>
                            <th scope="row"> <%= i+1 %></th>
                            <td> <%=data.firstName %>  </td>
                            <td><%=data.lastName %></td>
                            <td><%=data.email %></td>
                        </tr>
                        <% }) %>   
                </tbody>
              </table>
            </div>
</body>
