<body>
  <% if(category) { %>
    <div class="container">
      <h1 class="h1Header">Search Result For <%=category%> </h1>
      <button class="btn btn-success buttonExport"> <a href="/exportCSV" style="text-decoration: none;">Export CSV</a> </button>
      <button class="btn btn-primary buttonTag"> <a href="/searchDataCategory" >Search Data</a></button>
    </div>
  <% } else { %>
    <div class="container">
    <h1 class="h1Header">CSV File Operations using Node JS</h1>
    <button class="btn btn-primary buttonTag"> <a href="/searchDataCategory" >Search Data</a></button>
    </div>
  <% } %> 
    
