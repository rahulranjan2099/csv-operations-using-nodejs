   <!DOCTYPE html>
   <html lang="en">
   <head>
       <meta charset="UTF-8">
       <meta http-equiv="X-UA-Compatible" content="IE=edge">
       <meta name="viewport" content="width=device-width, initial-scale=1.0">
       <title>Search</title>
       <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
       <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
       <link rel="stylesheet" href="/styleSearch.css">
   </head>
   <body>
    <section class="admin-panel">
        <div class="row">
            <h1 class="text-center">Search By </h1>
            <div class="col-6 offset-3">
                <form action="/searchData?category=<%=category%>" method="POST" novalidate >
                    <% if(category === "books" || category === "magazines") { %> 
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" name="title" required>
                        <div class="valid-feedback">
                            Nice :D</div>
                    </div> 
                    <div class="mb-3">
                        <label class="form-label" for="description">ISBN</label>
                        <input class="form-control" type="text" name="isbn" required>
                    </div>
                    <% } %>
                    <% if(category === "magazines") { %>  
                    <div class="mb-3">
                        <label class="form-label" for="description">Published-At</label>
                        <input class="form-control" type="text" name="publishedAt" required>
                    </div>
                    <% } %>
                    <% if(category ==="books" || category ==="magazines" ||category ==="authors" ) { %> 
                    <div class="mb-3">
                        <label class="form-label" for="description">Author Email</label>
                        <input class="form-control" type="text" name="author" required>
                    </div>
                    <% } %> 
                    <% if(category === "authors") { %>  
                    <div class="mb-3">
                        <label class="form-label" for="description">First Name</label>
                        <input class="form-control" type="text" name="firstName" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Last Name</label>
                        <input class="form-control" type="text" name="lastName" required>
                    </div>
                    <% } %> 
                    <button class="btn btn-success mb-3" type="submit">Submit</button>
                </form>
                <button class="btn btn-danger">
                    <a href="/searchDataCategory" style="text-decoration: none;">BACK</a>
                </button>
            </div>
        </div>
        </section>
   </body>
   </html>